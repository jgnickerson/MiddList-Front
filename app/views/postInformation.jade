div
    a(ng-href='#/post/{{post.id}}')
        h3 {{post.title}}
    h5 Posted by {{post.author}} in {{category.name}} on {{post.date | date:"short"}}
    button.btn.btn-default(ng-really-message='Are you sure you want to delete this post?', ng-really-click='deletePost({{post.id}})') Delete this post
    a(ng-href='#/post/{{post.id}}/edit')
        button.btn.btn-default Edit this post

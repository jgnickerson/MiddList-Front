section
    .row
        .col-xs-10.col-xs-push-1.col-sm-8.col-sm-push-2
            .panel.panel-info
                .panel-heading
                    h1.panel-title {{post.title}}
                .panel-body
                    h5 Posted by {{post.author}} in "{{category.name}}" on {{post.date | date:'short'}}
                    p {{post.description}}
    br
    div
        .row
            .col-xs-10.col-xs-push-1.col-sm-8.col-sm-push-2
                a(ng-href='#/list')
                    button.btn.btn-primary Back to List
                a(ng-href='#/post/{{post.postId}}/edit')
                    button.btn.btn-primary Edit this post
                button.btn.btn-primary(ng-really-message='Are you sure you want to delete this post?', ng-really-click=' deletePost()') Delete this post
